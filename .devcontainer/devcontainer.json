{
	"name": "Development Container",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts"
		},
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.13"
		}
	},
	"postCreateCommand": "bash .devcontainer/setup.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"quarto.quarto",
				"ms-python.python",
				"REditorSupport.r",
				"esbenp.prettier-vscode"
			]
		}
	},
	"remoteUser": "vscode"
}
